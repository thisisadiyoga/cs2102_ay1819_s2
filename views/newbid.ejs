<body class="bg-dark">
<div class="container">
	<div class="card card-register mx-auto mt-5">
		<div class="card-header"><img src="/images/logo.png" width="50" height="50" />Bid Details</div>
		<div class="card-body">
			<form action="/insert_bid" method="post">
				<div class="form-group">
					<div class="form-group">
						<label for="petname">Pet</label>
						<input type="text" class="form-control" id="petname" name="petname" placeholder="Enter your pet's name">
					</div>
					<div class="form-group">
						<label for="pstartdate">Bid Start Date</label>
						<input type="text" class="form-control" id="pstartdate" name="pstartdate" placeholder="Enter your intended start date" data-input>
					</div>
					<div class="form-group">
						<label for="penddate">Bid End Date</label>
						<input type="text" class="form-control" id="penddate" name="penddate" placeholder="Enter your intended end date">
					</div>
					<div class="form-group">
						<label for="caretakername">Caretaker</label>
						<input type="text" class="form-control" id="caretakername" name="caretakername" placeholder="Enter the caretaker's username">
					</div>
					<div class="form-group">
						<label for="servicetype">Service Type</label>
						<input type="text" class="form-control" id="servicetype" name="servicetype" placeholder="Enter the service type">
					</div>
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
			</form>
			<div class="text-center">
				<a class="d-block small mt-3" href="/">Back to home</a>
			</div>
		</div>
	</div>
</div>

</body>
